{
    "servers": {
        "github": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        "simplemath": {
            "type": "stdio",
            "command": "uv",
            "args": [
                "--directory",
                "${workspaceFolder}/server",
                "run",
                "simplemath.py"
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        "weather": {
            "command": "uv",
            "args": [
                "--directory",
                "${workspaceFolder}/server",
                "run",
                "weather.py"
            ]
        },
    }
}